# Google reCAPTCHA Keys
RECAPTCHA_SITE_KEY="your_site_key_here"
RECAPTCHA_SECRET_KEY="your_secret_key_here"

# Email Configuration
TARGET_EMAIL="your_email@example.com"
MAIL_PROVIDER="smtp" # Can be smtp, sendgrid, pear, or php

# SMTP Configuration (if MAIL_PROVIDER is smtp)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USERNAME="your_smtp_username"
SMTP_PASSWORD="your_smtp_password"

# SendGrid Configuration (if MAIL_PROVIDER is sendgrid)
SENDGRID_API_KEY="your_sendgrid_api_key"
SENDGRID_FROM="from_email@example.com"

# PEAR Mail Configuration (if MAIL_PROVIDER is pear)
# Path to your hosting provider's PEAR installation
HOSTING_USER_PEAR_PATH="/usr/lib/php/pear"
# Allowed include paths for PEAR
ALLOWED_PATHS="."
